<div class="row">
  <div class="col-sm-4">
    <ul class="nav nav-pills nav-stacked">
      <li><%= link_to "New", new_radiologist_path %></li>
    </ul>
  </div>

  <div class="col-sm-8">
    <table class="table table-hover">
      <tr>
        <th>卡號</th>
        <th>姓名</th>
        <th>Func</th>
      </tr>

    <% @radiologists.each do |radiologist| %>
      <tr>
        <td><%= radiologist.no %></td>
        <td><%= radiologist.name %></td>
        <td>
          <%= link_to "Show", radiologist_path(radiologist), class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_radiologist_path(radiologist), class: "btn btn-warning" %>
          <%= link_to 'Delete', radiologist_path(radiologist), :method => :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
</div>